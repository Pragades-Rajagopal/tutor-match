{
  "$schema": "https://platformatic.dev/schemas/v0.38.1/db",
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    }
  },
  "db": {
    "connectionString": "{DATABASE_URL}",
    "graphql": true,
    "openapi": {
      "ignore": {
        "otp": true,
        "userLogin": true,
        "students": true,
        "courses": true
      }
    }
  },
  "watch": {
    "ignore": [
      "*.sqlite",
      "*.sqlite-journal"
    ]
  },
  "migrations": {
    "dir": "migrations"
  },
  "plugins": {
    "paths": [
      "./plugins"
    ]
  },
  "types": {
    "autogenerate": true
  }
}